<div class="form-group">
    <label for="title" class="mb-2">Title</label>
    <input required type="text" name="title" id="title" class="form-control" autocomplete="off"
    value=<%= article.title%>>
</div>
<div class="form-group">
    <label for="description" class="mb-2">description</label>
    <textarea name="description" id="description" class="form-control">
        <%=article.description%>
    </textarea>
</div>

<div class="form-group">
    <label for="markdown" class="mb-2">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control">
        <%=article.markdown%>
    </textarea>
</div>

<style>
    #markdown {
        height: 30vh
    }

    #description {
        height: 15vh
    }
</style>

<a href="/" class="btn btn-secondary mt-4">Cancel</a>
<button type="submit" class="btn btn-primary mt-4">Save</button>